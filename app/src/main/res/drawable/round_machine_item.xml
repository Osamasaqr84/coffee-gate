<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow layers -->
    <item
        android:left="1dp"
        android:right="1dp"
        android:top="3dp">
        <shape>
            <corners android:topLeftRadius="14dp" android:topRightRadius="14dp" android:bottomRightRadius="14sp" android:bottomLeftRadius="14sp" />
            <padding
                android:bottom="1.8dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1.2dp" />
            <solid android:color="@color/shadow_hack_level_1" />
        </shape>
    </item>
    <item
        android:left="1dp"
        android:right="1dp"
        android:top="3dp">
        <shape>
            <corners android:topLeftRadius="14dp" android:topRightRadius="14dp" android:bottomRightRadius="14sp" android:bottomLeftRadius="14sp" />
            <padding
                android:bottom="1.8dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1.2dp" />
            <solid android:color="@color/shadow_hack_level_2" />
        </shape>
    </item>
    <item
        android:left="1dp"
        android:right="1dp"
        android:top="3dp">
        <shape>
            <corners android:topLeftRadius="14dp" android:topRightRadius="14dp" android:bottomRightRadius="14sp" android:bottomLeftRadius="14sp" />
            <padding
                android:bottom="1.8dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1.2dp" />
            <solid android:color="@color/shadow_hack_level_3" />
        </shape>
    </item>


    <!-- Background layer -->
    <item>
        <shape>
            <solid android:color="#F2FAF6F6" />
            <corners android:topLeftRadius="14dp" android:topRightRadius="14dp" android:bottomRightRadius="14sp" android:bottomLeftRadius="14sp" />
        </shape>
    </item>

</layer-list>